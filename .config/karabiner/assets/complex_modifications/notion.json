{
  "title": "Notion",
  "rules": [
    {
      "description": "Ctrl-h to Backspace",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^notion\\.id$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "h",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "delete_or_backspace"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl-m to Return",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^notion\\.id$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "m",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "return_or_enter"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl-i to Tab",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^notion\\.id$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "i",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "tab"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Ctrl-[ to Escape",
      "manipulators": [
        {
          "conditions": [
            {
              "bundle_identifiers": [
                "^notion\\.id$"
              ],
              "type": "frontmost_application_if"
            }
          ],
          "from": {
            "key_code": "[",
            "modifiers": {
              "mandatory": [
                "left_control"
              ],
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "escape"
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
