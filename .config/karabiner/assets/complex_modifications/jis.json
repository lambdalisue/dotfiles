{
  "title": "JIS Keyboard",
  "rules": [
    {
      "description": "Change ¥ to Option+¥",
      "manipulators": [
        {
          "from": {
            "key_code": "international3"
          },
          "to": [
            {
              "key_code": "international3",
              "modifiers": [
                "option"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change Option+¥ to ¥",
      "manipulators": [
        {
          "from": {
            "key_code": "international3",
            "modifiers": {
              "mandatory": [
                "option"
              ]
            }
          },
          "to": [
            {
              "key_code": "international3"
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Change Ctrl+¥ to Ctrl+\\",
      "manipulators": [
        {
          "from": {
            "key_code": "international3",
            "modifiers": {
              "mandatory": [
                "control"
              ]
            }
          },
          "to": [
            {
              "key_code": "backslash",
              "modifiers": [
                "control"
              ]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
