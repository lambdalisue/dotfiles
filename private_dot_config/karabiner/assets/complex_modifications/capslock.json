{
  "title": "Capslock",
  "rules": [
    {
      "description": "Replace Capslock -> Ctrl + Alt",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_control",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        }
      ]
    },
    {
      "description": "Replace Capslock -> Alt + Shift",
      "manipulators": [
        {
          "from": {
            "key_code": "caps_lock",
            "modifiers": {
              "optional": [
                "any"
              ]
            }
          },
          "to": [
            {
              "key_code": "left_shift",
              "modifiers": ["option"]
            }
          ],
          "type": "basic"
        }
      ]
    }
  ]
}
